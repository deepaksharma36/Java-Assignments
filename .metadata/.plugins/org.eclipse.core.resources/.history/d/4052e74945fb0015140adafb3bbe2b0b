import java.io.BufferedReader;
import java.io.File;
import java.io.FileOutputStream;
import java.io.FileReader;
import java.io.IOException;


import org.apache.poi.xssf.usermodel.*;

public class TestCaseExecutor {
	XSSFWorkbook ResultBook = new XSSFWorkbook();
	XSSFSheet ResultSheet;
	
public TestCaseExecutor( String algoName) {
	ResultSheet = ResultBook.createSheet(algoName);
}	
public void TestExecutor(File testFile) throws IOException
{

	String sCurrentLine;
	
	String[] input;
	long startTime; 
	BufferedReader fileReader = new BufferedReader(new FileReader(testFile));
	int testCaseLength=1;
	while ((sCurrentLine = fileReader.readLine()) != null) {
		
		input=sCurrentLine.split("\t");
		startTime= System.currentTimeMillis(); 
		//Here Shrill's Algo will receive Input 
		
		long stopTime = System.currentTimeMillis();
	    long elapsedTime = stopTime - startTime;
	    recordResults(testCaseLength++,elapsedTime);
	    
	}
	
	


	
private void recordResults(int testCaseLength, long Time , File FileName)
{

    
    
    
    XSSFRow executionRecordRow = ResultSheet.getRow(testCaseLength);
    XSSFCell lengthCell = executionRecordRow.getCell(0);
    lengthCell.setCellValue(testCaseLength);
    XSSFCell timeCell = executionRecordRow.getCell(1);
    timeCell.setCellValue(Time);

     FileOutputStream out1 = new FileOutputStream (FileName,false);
     ResultBook.write(out1);
     
}

}
